<section class="profile grid container">
  <div class="user_info flex_column">
    <h1><%= user.username %></h1>
    <img src="/uploads/<%= user.image %>" alt="sdfasef">
    <div class="bio">
      <h5>About Me</h5>
      <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Pariatur aperiam aliquid voluptas omnis nemo aspernatur.</p>
    </div>
  </div>

  <div class="user_posts flex_column">
    <h4>My Additions</h4>
    <% userPosts.forEach(post => { %>
      <a href="/post/<%= post._id %>" class="flex_row">
        <img src="/uploads/<%= post.image %>" alt="<%= post.title %>" loading="lazy">
        <h3><%= post.title %></h3>
        <a href="/edit_post/<%= post._id %>">Edit</a>
        <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
          <button>Delete</button>
        </form>
      </a>
    <% }) %>
    <a href="/create_post">Create a new post</a>
  </div>
</section>
<h1><%= user.username %></h1>
<img src="/uploads/<%= user.image %>" alt="sdfasef">
<a href="/create_post">Create a new post</a>

<% userPosts.forEach(post => { %>
  <a href="/post/<%= post._id %>" class="flex_row">
    <img src="/uploads/<%= post.image %>" alt="<%= post.title %>" loading="lazy">
    <h3><%= post.title %></h3>
    <a href="/edit_post/<%= post._id %>">Edit</a>
    <form action="/delete-post/<%= post._id %>?_method=DELETE" method="POST">
      <button>Delete</button>
    </form>
  </a>
<% }) %>